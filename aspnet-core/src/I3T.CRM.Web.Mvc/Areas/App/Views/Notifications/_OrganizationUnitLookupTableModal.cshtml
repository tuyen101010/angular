@using I3T.CRM.Web.Areas.App.Models.Common.Modals
@using I3T.CRM.Web.TagHelpers

@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/Notifications/_OrganizationUnitLookupTableModal.js" asp-append-version="true"></script>
}

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("SearchOrganizationUnit")))

<div class="@(await GetContainerClass())">
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">
                        <div class="form-group align-items-center">
                            <div class="input-group">
                                <input type="text" id="OrganizationUnitTableFilter" class="form-control m-input" placeholder='@L("SearchWithThreeDot")'>
                                <span class="input-group-btn">
                                    <button id="GetOrganizationUnitButton" class="btn btn-primary" type="submit">
                                        <i class="flaticon-search-1"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row align-items-center">
                <table id="OrganizationUnitTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                    <thead>
                    <tr>
                        <th>@L("Select")</th>
                        <th>@L("DisplayName")</th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")